    <!-- Scroll Progress & Timeline Scripts -->
    <script is:inline>
      // Scroll Progress Indicator
      (() => {
        const progressBar = document.getElementById('scroll-progress');
        if (!progressBar) return;
        
        window.addEventListener('scroll', () => {
          const scrollTop = window.scrollY;
          const docHeight = document.documentElement.scrollHeight - window.innerHeight;
          const progress = (scrollTop / docHeight) * 100;
          progressBar.style.width = `${Math.min(progress, 100)}%`;
        });
      })();
      
      // Timeline Progress Animation
      (() => {
        const now = new Date();
        const dates = {
          register: new Date('2026-01-15T00:00:00Z'),
          hackStart: new Date('2026-02-01T00:00:00Z'),
          hackEnd: new Date('2026-02-28T23:59:59Z'),
          winners: new Date('2026-03-15T00:00:00Z')
        };
        
        const steps = document.querySelectorAll('.timeline-step');
        const progressLine = document.querySelector('.timeline-progress');
        
        let completedSteps = 0;
        
        if (now >= dates.register) completedSteps = 1;
        if (now >= dates.hackStart) completedSteps = 2;
        if (now >= dates.hackEnd) completedSteps = 4;
        if (now >= dates.winners) completedSteps = 5;
        
        steps.forEach((step, i) => {
          const dot = step.querySelector('.timeline-dot');
          if (i < completedSteps && dot) {
            dot.classList.remove('bg-snf-white/5', 'border-snf-white/20');
            dot.classList.add('bg-snf-blue-500/20', 'border-snf-blue-500');
            dot.querySelector('span').classList.remove('text-snf-white/60');
            dot.querySelector('span').classList.add('text-snf-blue-500');
          }
        });
        
        if (progressLine) {
          const progressPercent = Math.min((completedSteps / 5) * 100, 100);
          progressLine.style.width = `${progressPercent}%`;
        }
      })();
    </script>

