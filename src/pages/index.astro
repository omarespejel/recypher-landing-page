    <!-- SEO & Accessibility -->
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#0C0A18" />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="alternate" hreflang="en" href={hrefForLocale('en')} />
    <link rel="alternate" hreflang="es" href={hrefForLocale('es')} />
    <link rel="alternate" hreflang="zh-CN" href={hrefForLocale('zh-CN')} />
    <link rel="alternate" hreflang="pt" href={hrefForLocale('pt')} />
    <link rel="alternate" hreflang="x-default" href={hrefForLocale('en')} />
    
    <title>{pageTitle}</title>
    
    <!-- Fonts loaded via CDN: Cooper Hewitt, Junicode, Martian Mono, Inter -->
    
    <!-- Global Styles -->
    <style is:global>
      html {
        scroll-behavior: auto; /* Lenis handles smooth scroll */
      }
      
      body {
        background-color: #070512;
        color: #F3F2F1;
        font-family: 'Inter', sans-serif;
        overflow-x: hidden;
      }
      
      .font-display {
        font-family: 'Cooper Hewitt Heavy', 'Cooper Hewitt', system-ui, sans-serif;
        font-weight: 800;
        letter-spacing: -0.02em;
      }
      
      /* Hide elements before GSAP animation */
      .gs-hidden {
        opacity: 1;
        transform: none;
      }

      .anim-ready .gs-hidden {
        opacity: 0;
        transform: translateY(12px);
      }

      @media (prefers-reduced-motion: reduce) {
        .gs-hidden {
          opacity: 1;
          transform: none;
        }
      }

      .reduced-motion .gs-hidden {
        opacity: 1 !important;
        transform: none !important;
      }

      @view-transition {
        navigation: auto;
      }

      ::view-transition-old(root),
      ::view-transition-new(root) {
        animation-duration: 0.3s;
      }
    </style>
  </head>
  
  <body class="antialiased">
    
    <!-- Scroll Progress Indicator -->
    <div id="scroll-progress" class="fixed top-0 left-0 h-0.5 bg-gradient-to-r from-snf-blue-500 via-purple-500 to-green-500 z-[100] transition-all duration-75" style="width: 0%;"></div>
    
    <!-- Skip to content link for accessibility -->
