// src/pages/index.astro
import '../styles/global.css';
import ArrowRight from '../components/icons/ArrowRight.astro';
import Bitcoin from '../components/icons/Bitcoin.astro';
import BookOpen from '../components/icons/BookOpen.astro';
import ChevronDown from '../components/icons/ChevronDown.astro';
import GraduationCap from '../components/icons/GraduationCap.astro';
import Monitor from '../components/icons/Monitor.astro';
import Shield from '../components/icons/Shield.astro';
import Users from '../components/icons/Users.astro';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import * as m from '../paraglide/messages';

const hackathonName = 'The Bitcoin and Privacy Hackathon';
const siteUrl = 'https://bitcoinxprivacy.com';
const supportedLocales = ['en', 'es', 'zh-CN', 'zh-TW', 'pt'];
const defaultLocale = 'en';
const locale = Astro.currentLocale ?? defaultLocale;
const localePattern = new RegExp(`^/(${supportedLocales.join('|')})(?=/|$)`);
const pathWithoutLocale = Astro.url.pathname.replace(localePattern, '');
const normalizedPath = pathWithoutLocale === '' ? '/' : pathWithoutLocale;
const hrefForLocale = (code) => `${siteUrl}${code === defaultLocale ? '' : `/${code}`}${normalizedPath}`;
const canonicalUrl = hrefForLocale(locale);
const metaDescription = m.meta_description({ hackathonName });
const ogTitle = m.og_title({ hackathonName });
const ogSiteName = m.og_site_name({ hackathonName });
const pageTitle = m.page_title({ hackathonName });
const countdownLabels = {
  starts: m.countdown_starts_in(),
  ends: m.countdown_ends_in(),
};
const personalizationCopy = {
  privacy: m.hero_subtitle_privacy(),
};

const tracks = [
  {
    name: m.track_privacy_name(),
    prize: '$6,000',
    percentage: '40%',
    description: m.track_privacy_description(),
    examples: [
      m.track_privacy_example_1(),
      m.track_privacy_example_2(),
      m.track_privacy_example_3(),
      m.track_privacy_example_4(),
    ],
  },
  {
    name: m.track_bitcoin_name(),
    prize: '$6,000',
    percentage: '40%',
    description: m.track_bitcoin_description(),
    examples: [
      m.track_bitcoin_example_1(),
      m.track_bitcoin_example_2(),
      m.track_bitcoin_example_3(),
      m.track_bitcoin_example_4(),
    ],
  },
  {
    name: m.track_open_name(),
    prize: '$3,000',
    percentage: '20%',
    description: m.track_open_description(),
    examples: [
      m.track_open_example_1(),
      m.track_open_example_2(),
      m.track_open_example_3(),
      m.track_open_example_4(),
    ],
  }
];

const mentors = [
  { name: 'Omar Espejel', role: m.mentor_omar_role(), org: m.mentor_org(), image: '/mentors/omar.jpg', xAccount: 'https://x.com/espejelomar' },
  { name: 'Henri', role: m.mentor_henri_role(), org: m.mentor_org(), image: '/mentors/henri.png', xAccount: 'https://x.com/henrlihenrli' },
];

const sponsors = [
  { name: 'Starknet Foundation', logo: '/sponsors/starknet.svg' },
  { name: 'StarkWare', logo: '/sponsors/starkware.svg' },
];

const faqs = [
  {
    q: m.faq_1_q(),
    a: m.faq_1_a(),
  },
  {
    q: m.faq_2_q(),
    a: m.faq_2_a(),
  },
  {
    q: m.faq_3_q(),
    a: m.faq_3_a(),
  },
  {
    q: m.faq_4_q(),
    a: m.faq_4_a(),
  },
  {
    q: m.faq_submit_q(),
    a: m.faq_submit_a(),
  },
  {
    q: m.faq_questions_q(),
    a: m.faq_questions_a(),
  },
  {
    q: m.faq_prizes_q(),
    a: m.faq_prizes_a(),
  },
];

const stats = [
  { value: 'STWO', label: m.stat_1_label() },
  { value: '$200M+', label: m.stat_2_label(), count: { value: 200, prefix: '$', suffix: 'M+' } },
  { value: 'Ztarknet', label: m.stat_3_label() },
];

const resources = [
  {
    title: m.resource_bitcoin_title(),
    description: m.resource_bitcoin_description(),
    icon: 'bitcoin',
    link: '#',
    linkText: m.resource_bitcoin_link(),
    gradient: 'from-orange-500/20 to-orange-600/5',
  },
  {
    title: m.resource_privacy_title(),
    description: m.resource_privacy_description(),
    icon: 'shield',
    link: '#',
    linkText: m.resource_privacy_link(),
    gradient: 'from-purple-500/20 to-purple-600/5',
  },
  {
    title: m.resource_academy_title(),
    description: m.resource_academy_description(),
    icon: 'academic',
    link: 'https://www.starknet.io/learn/',
    linkText: m.resource_academy_link(),
    gradient: 'from-snf-blue-500/20 to-snf-blue-700/5',
  }
];

const testimonials = [
  {
    quote: m.testimonial_1_quote(),
    author: m.testimonial_1_author(),
    role: m.testimonial_1_role(),
  },
  {
    quote: m.testimonial_2_quote(),
    author: m.testimonial_2_author(),
    role: m.testimonial_2_role(),
  },
  {
    quote: m.testimonial_3_quote(),
    author: m.testimonial_3_author(),
    role: m.testimonial_3_role(),
  },
  {
    quote: m.testimonial_4_quote(),
    author: m.testimonial_4_author(),
    role: m.testimonial_4_role(),
  },
  {
    quote: m.testimonial_5_quote(),
    author: m.testimonial_5_author(),
    role: m.testimonial_5_role(),
  },
];
---

<html lang={locale}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={metaDescription} />
    <meta name="view-transition" content="same-origin" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={m.og_description()} />
    <meta property="og:image" content="https://bitcoinxprivacy.com/og-image.jpg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={ogSiteName} />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="https://bitcoinxprivacy.com/og-image.jpg" />
    <meta name="twitter:site" content="@Starknet" />
    <meta name="twitter:creator" content="@StarknetFndn" />
    
    <!-- SEO & Accessibility -->
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#0C0A18" />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="alternate" hreflang="en" href={hrefForLocale('en')} />
    <link rel="alternate" hreflang="es" href={hrefForLocale('es')} />
    <link rel="alternate" hreflang="zh-CN" href={hrefForLocale('zh-CN')} />
    <link rel="alternate" hreflang="zh-TW" href={hrefForLocale('zh-TW')} />
    <link rel="alternate" hreflang="pt" href={hrefForLocale('pt')} />
    <link rel="alternate" hreflang="x-default" href={hrefForLocale('en')} />
    
    <title>{pageTitle}</title>
    
    <!-- Fonts -->
    <link rel="preload" as="font" href="/fonts/InterVariable.woff2" type="font/woff2" crossorigin />
    <link rel="preload" as="font" href="/fonts/SpaceGroteskVariable.woff2" type="font/woff2" crossorigin />
    
    <!-- Global Styles -->
    <style is:global>
      html {
        scroll-behavior: auto; /* Lenis handles smooth scroll */
      }
      
      body {
        background-color: #0C0A18;
        color: #F3F2F1;
        font-family: 'Inter', system-ui, sans-serif;
        overflow-x: hidden;
      }
      
      .font-display {
        font-family: 'Space Grotesk', system-ui, sans-serif;
      }
      
      /* Hide elements before GSAP animation */
      .gs-hidden {
        opacity: 1;
        transform: none;
      }

      .anim-ready .gs-hidden {
        opacity: 0;
        transform: translateY(20px);
      }

      @media (prefers-reduced-motion: reduce) {
        .gs-hidden {
          opacity: 1;
          transform: none;
        }
      }

      .reduced-motion .gs-hidden {
        opacity: 1 !important;
        transform: none !important;
      }

      @view-transition {
        navigation: auto;
      }

      ::view-transition-old(root),
      ::view-transition-new(root) {
        animation-duration: 0.3s;
      }
    </style>
  </head>
  
  <body class="antialiased">
    
    <!-- Skip to content link for accessibility -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-snf-blue-500 text-white px-4 py-2 rounded-lg z-[100] focus:ring-2 focus:ring-snf-blue-500 focus:ring-offset-2 focus:ring-offset-snf-black focus:outline-none">
      {m.skip_to_content()}
    </a>

    <!-- SVG Gradient Definitions -->
    <svg width="0" height="0" class="hidden" aria-hidden="true" focusable="false">
      <defs>
        <linearGradient id="icon-gradient-blue" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#5B7ECF" />
          <stop offset="100%" style="stop-color:#8B5CF6" />
        </linearGradient>
        <linearGradient id="icon-gradient-orange" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#F97316" />
          <stop offset="100%" style="stop-color:#FBBF24" />
        </linearGradient>
        <linearGradient id="icon-gradient-purple" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#8B5CF6" />
          <stop offset="100%" style="stop-color:#EC4899" />
        </linearGradient>
      </defs>
    </svg>
    
    <noscript>
      <style>
        .gs-hidden { opacity: 1 !important; transform: none !important; }
      </style>
    </noscript>
    
    <!-- Navigation -->
    <nav class="fixed top-0 w-full z-50 bg-snf-black/80 backdrop-blur-xl border-b border-snf-blue-900/30 relative">
      <div class="scroll-progress" id="scroll-progress"></div>
      <div class="max-w-6xl mx-auto px-6 py-4 flex flex-wrap justify-between items-center gap-4">
        <span class="font-display font-bold text-xl text-snf-white">{hackathonName}</span>
        <div class="flex items-center gap-4">
          <LanguageSwitcher />
          <a 
            href="https://dorahacks.io/hackathon/recypher?utm_source=recypher-landing&utm_medium=cta&utm_campaign=2026" 
            target="_blank"
            rel="noopener noreferrer"
            class="button-animated bg-snf-blue-500 hover:bg-snf-blue-700 text-snf-white px-5 py-2 rounded-lg font-medium transition-colors duration-300 focus:ring-2 focus:ring-snf-blue-500 focus:ring-offset-2 focus:ring-offset-snf-black focus:outline-none"
          >
            {m.nav_register_now()}
          </a>
        </div>
      </div>
    </nav>

    <!-- ============================================ -->
    <!-- HERO SECTION -->
    <!-- ============================================ -->
    <section id="main-content" class="min-h-screen flex items-center justify-center px-6 relative overflow-hidden dynamic-gradient-bg">
      
      <!-- Dynamic Aurora Background -->
      <div class="aurora-bg"></div>
      <canvas id="gradient-canvas" class="gradient-canvas" aria-hidden="true"></canvas>
      
      <!-- Animated color orbs -->
      <div class="absolute inset-0 pointer-events-none overflow-hidden">
        <div class="color-orb color-orb-1"></div>
        <div class="color-orb color-orb-2"></div>
        <div class="color-orb color-orb-3"></div>
      </div>
      
      <!-- Floating Decorative Elements -->
      <div class="absolute top-1/4 right-[10%] w-32 h-32 border border-snf-blue-500/10 rounded-2xl rotate-12 animate-float pointer-events-none hidden md:block"></div>
      <div class="absolute bottom-1/3 left-[5%] w-24 h-24 bg-gradient-to-br from-snf-blue-500/5 to-transparent rounded-full animate-float-delayed pointer-events-none hidden md:block"></div>
      <div class="absolute top-1/2 right-[15%] w-16 h-16 border border-snf-blue-500/5 rounded-lg rotate-45 animate-float pointer-events-none hidden lg:block" style="animation-delay: 1s;"></div>
      
      <!-- Subtle grid pattern -->
      <div class="absolute inset-0 pointer-events-none hero-grid"></div>
      <div class="organic-blob blob-1 glow-1"></div>
      <div class="organic-blob blob-2 glow-2"></div>
      <div class="organic-blob blob-3 glow-1"></div>
      
      
      <!-- Main Content -->
      <div class="relative z-10 text-center max-w-4xl mx-auto">
        
        <!-- Floating badge -->
        <div class="hero-element gs-hidden inline-flex items-center gap-2 bg-snf-blue-900/40 border border-snf-blue-500/30 rounded-full px-4 py-1.5 mb-8">
          <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
          <span class="text-snf-white/70 text-sm">{m.hero_badge()}</span>
        </div>
        
        <!-- Main Title with gradient -->
        <h1 class="hero-title hero-element gs-hidden font-display text-display-xl font-bold mb-4" aria-label={`${m.hero_title_line1()} ${m.hero_title_line2()}`}>
          <span class="gradient-text" data-split>{m.hero_title_line1()}</span><br/>
          <span class="text-snf-white scribble-underline" data-split>{m.hero_title_line2()}</span>
        </h1>
        
        <!-- Subheadline -->
        <p class="hero-subtitle hero-element gs-hidden text-snf-white/60 text-body-large max-w-xl mx-auto mb-10">
          <span class="hero-subtitle-line">{m.hero_subtitle_line1()}</span><br class="hidden md:block" />
          <span class="text-snf-blue-500 font-medium">{m.hero_subtitle_line2()}</span>
        </p>
        
        <!-- Countdown Timer -->
        <div class="hero-element gs-hidden mb-10">
          <p class="text-snf-white/40 text-xs tracking-[0.3em] uppercase mb-4">{m.countdown_starts_in()}</p>
          <div class="flex justify-center gap-2 md:gap-4" id="countdown">
            <div class="countdown-unit glass rounded-xl px-4 py-3 md:px-6 md:py-4">
              <span class="block text-3xl md:text-5xl lg:text-6xl font-light tabular-nums text-snf-white" id="days" aria-live="polite">00</span>
              <p class="text-snf-white/30 text-[10px] tracking-[0.2em] mt-1">{m.countdown_days()}</p>
            </div>
            <span class="text-3xl md:text-5xl lg:text-6xl font-light text-snf-white/10 self-center" aria-hidden="true">:</span>
            <div class="countdown-unit glass rounded-xl px-4 py-3 md:px-6 md:py-4">
              <span class="block text-3xl md:text-5xl lg:text-6xl font-light tabular-nums text-snf-white" id="hours" aria-live="polite">00</span>
              <p class="text-snf-white/30 text-[10px] tracking-[0.2em] mt-1">{m.countdown_hours()}</p>
            </div>
            <span class="text-3xl md:text-5xl lg:text-6xl font-light text-snf-white/10 self-center" aria-hidden="true">:</span>
            <div class="countdown-unit glass rounded-xl px-4 py-3 md:px-6 md:py-4">
              <span class="block text-3xl md:text-5xl lg:text-6xl font-light tabular-nums text-snf-white" id="mins" aria-live="polite">00</span>
              <p class="text-snf-white/30 text-[10px] tracking-[0.2em] mt-1">{m.countdown_minutes()}</p>
            </div>
            <span class="text-3xl md:text-5xl lg:text-6xl font-light text-snf-white/10 self-center" aria-hidden="true">:</span>
            <div class="countdown-unit glass rounded-xl px-4 py-3 md:px-6 md:py-4">
              <span class="block text-3xl md:text-5xl lg:text-6xl font-light tabular-nums text-snf-white" id="secs" aria-live="polite">00</span>
              <p class="text-snf-white/30 text-[10px] tracking-[0.2em] mt-1">{m.countdown_seconds()}</p>
            </div>
          </div>
          <p class="text-snf-white/40 text-xs mt-3">{m.hero_countdown_urgency()}</p>
        </div>
        
        <!-- CTA Buttons -->
        <div class="hero-element gs-hidden flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://t.me/+-5zNW47GSdQ1ZDkx"
            target="_blank"
            rel="noopener noreferrer"
            class="button-animated cta-glow inline-flex items-center justify-center bg-gradient-to-r from-snf-blue-500 to-snf-blue-700 text-snf-white px-8 py-4 rounded-full font-semibold text-lg transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-snf-blue-500/30 focus:ring-2 focus:ring-snf-blue-500 focus:ring-offset-2 focus:ring-offset-snf-black focus:outline-none group"
          >
            {m.cta_join_telegram()}
            <ArrowRight class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" strokeWidth={2} />
          </a>
          <a 
            href="https://dorahacks.io/hackathon/recypher?utm_source=recypher-landing&utm_medium=cta&utm_campaign=2026" 
            target="_blank"
            rel="noopener noreferrer"
            class="button-animated cta-glow inline-flex items-center justify-center bg-snf-blue-500 hover:bg-snf-blue-700 text-snf-white px-8 py-4 rounded-full font-semibold text-lg transition-all duration-300 hover:scale-105 focus:ring-2 focus:ring-snf-blue-500 focus:ring-offset-2 focus:ring-offset-snf-black focus:outline-none group"
          >
            {m.cta_register_primary()}
            <ArrowRight class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" strokeWidth={2} />
          </a>
          <a 
            href="#tracks"
            class="button-animated inline-flex items-center justify-center border border-snf-white/20 hover:border-snf-white/40 text-snf-white/70 hover:text-snf-white px-8 py-4 rounded-full font-medium text-lg transition-all duration-300 focus:ring-2 focus:ring-snf-blue-500 focus:ring-offset-2 focus:ring-offset-snf-black focus:outline-none"
          >
            {m.cta_view_tracks()}
          </a>
        </div>
        
      </div>
      
      <!-- Bottom Left: Dates -->
      <div class="absolute bottom-8 left-8 text-left hidden md:block">
        <p class="hero-meta gs-hidden font-mono text-sm text-snf-white/40">
          {m.hero_dates_line1()}<br/>
          <span class="text-snf-white/60">{m.hero_dates_year()}</span>
        </p>
      </div>
      
      <!-- Bottom Right: Starknet Foundation -->
      <div class="absolute bottom-8 right-8 text-right hidden md:block">
        <p class="hero-meta gs-hidden text-sm text-snf-white/40">
          {m.hero_powered_by()}<br/>
          <span class="text-snf-blue-500 font-medium">{m.hero_powered_by_org()}</span>
        </p>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 hidden md:block">
        <div class="hero-meta gs-hidden animate-float">
          <ChevronDown class="w-6 h-6 text-snf-white/30" strokeWidth={1.5} />
        </div>
      </div>
      
    </section>

    <!-- ============================================ -->
    <!-- WHY NOW SECTION -->
    <!-- ============================================ -->
    <section class="py-32 md:py-40 px-6 border-t border-snf-blue-900/30">
      <div class="max-w-6xl mx-auto">
        
        <h2 class="section-title scribble-underline gs-hidden font-display text-3xl md:text-4xl lg:text-5xl font-bold mb-16 text-center">
          {m.section_why_title()}
        </h2>
        
        <div class="stats-grid grid md:grid-cols-3 gap-6 md:gap-8">
          {stats.map((stat, i) => (
            <div class="stat-card gs-hidden bg-gradient-to-b from-snf-blue-900/30 to-snf-blue-900/5 border border-snf-blue-900/40 rounded-2xl p-8 hover:border-snf-blue-500/50 transition-colors duration-300">
              <div class="text-snf-blue-500 text-4xl md:text-5xl font-bold mb-4 stat-value">
                {stat.count ? (
                  <span
                    data-count-value={stat.count.value}
                    data-count-prefix={stat.count.prefix}
                    data-count-suffix={stat.count.suffix}
                  >
                    {stat.count.prefix}{stat.count.value}{stat.count.suffix}
                  </span>
                ) : (
                  <span>{stat.value}</span>
                )}
              </div>
              <p class="text-snf-white/60 leading-relaxed">{stat.label}</p>
            </div>
          ))}
        </div>
        
        <blockquote class="quote gs-hidden mt-16 text-center">
          <p class="text-xl md:text-2xl text-snf-white/50 italic max-w-3xl mx-auto leading-relaxed">
            "{m.quote_1_text()}"
          </p>
          <cite class="block text-snf-blue-500 not-italic mt-4 text-base font-medium">
            {m.quote_1_cite()} (<a href="https://www.youtube.com/watch?v=u3B8xqsf66w" target="_blank" rel="noopener noreferrer" class="underline hover:text-snf-blue-700 transition-colors">{m.source_label()}</a>)
          </cite>
        </blockquote>

        <blockquote class="quote gs-hidden mt-8 text-center">
          <p class="text-xl md:text-2xl text-snf-white/50 italic max-w-3xl mx-auto leading-relaxed">
            "{m.quote_2_text()}"
          </p>
          <cite class="block text-snf-blue-500 not-italic mt-4 text-base font-medium">
            {m.quote_2_cite()} (<a href="https://a16zcrypto.com/posts/article/big-ideas-things-excited-about-crypto-2026/" target="_blank" rel="noopener noreferrer" class="underline hover:text-snf-blue-700 transition-colors">{m.source_label()}</a>)
          </cite>
        </blockquote>

        <p class="gs-hidden text-snf-white/60 text-center max-w-2xl mx-auto mt-8">
          {m.story_blurb()}
        </p>
        
      </div>
    </section>

    <!-- ============================================ -->
    <!-- TRACKS SECTION -->
    <!-- ============================================ -->
    <section id="tracks" class="py-32 md:py-40 px-6 border-t border-snf-blue-900/30">
      <div class="max-w-6xl mx-auto">
        
        <div class="text-center mb-16">
          <h2 class="section-title scribble-underline gs-hidden font-display text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
            {m.section_tracks_title()}
          </h2>
          <p class="section-subtitle gs-hidden text-snf-white/50 text-lg">
            {m.section_tracks_subtitle()}
          </p>
        </div>
        
        <div class="tracks-grid anti-grid grid md:grid-cols-3 gap-6">
          {tracks.map((track, i) => (
            <div class:list={[
              'track-card card-shine gs-hidden bg-gradient-to-b from-snf-blue-900/30 to-transparent border border-snf-blue-900/40 rounded-2xl p-8 hover:border-snf-blue-500/50',
              i === 0 ? 'lg:col-span-2 lg:row-span-2' : '',
            ]}>
              
