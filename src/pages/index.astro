      (() => {
        const beginDate = new Date('2026-02-01T10:00:00-05:00').getTime();
        const endDate = new Date('2026-02-28T23:59:59-05:00').getTime();
        let countdownIntervalId;

        function updateCountdown() {
          const now = Date.now();
          
          // Update "Submissions begin" countdown
          let beginDistance = beginDate - now;
          const beginContainer = document.getElementById('countdown-begin-container');
          
          if (beginDistance <= 0) {
            // Hide the begin countdown and dividers once submissions have started
            if (beginContainer) beginContainer.style.display = 'none';
            document.querySelectorAll('.countdown-divider').forEach(el => el.style.display = 'none');
          } else {
            const beginDays = Math.floor(beginDistance / (1000 * 60 * 60 * 24));
            const beginHours = Math.floor((beginDistance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const beginMins = Math.floor((beginDistance % (1000 * 60 * 60)) / (1000 * 60));
            const beginSecs = Math.floor((beginDistance % (1000 * 60)) / 1000);

            const beginDaysEl = document.getElementById('begin-days');
            if (beginDaysEl) {
              beginDaysEl.textContent = String(beginDays).padStart(2, '0');
              document.getElementById('begin-hours').textContent = String(beginHours).padStart(2, '0');
              document.getElementById('begin-mins').textContent = String(beginMins).padStart(2, '0');
              document.getElementById('begin-secs').textContent = String(beginSecs).padStart(2, '0');
            }
          }

          // Update "Submissions end" countdown
          let endDistance = endDate - now;
          if (endDistance < 0) {
            endDistance = 0;
            if (countdownIntervalId) clearInterval(countdownIntervalId);
          }
          
          const endDays = Math.floor(endDistance / (1000 * 60 * 60 * 24));
          const endHours = Math.floor((endDistance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
          const endMins = Math.floor((endDistance % (1000 * 60 * 60)) / (1000 * 60));
          const endSecs = Math.floor((endDistance % (1000 * 60)) / 1000);

          const endDaysEl = document.getElementById('end-days');
          if (endDaysEl) {
            endDaysEl.textContent = String(endDays).padStart(2, '0');
            document.getElementById('end-hours').textContent = String(endHours).padStart(2, '0');
            document.getElementById('end-mins').textContent = String(endMins).padStart(2, '0');
            document.getElementById('end-secs').textContent = String(endSecs).padStart(2, '0');
          }
        }

        updateCountdown();
        countdownIntervalId = setInterval(updateCountdown, 1000);
      })();
    </script>
