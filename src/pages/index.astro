              toggleActions: 'play none none none',
            }
          }
        );
      
        // Support cards stagger
        gsap.fromTo('.support-card',
          { opacity: 0, y: 40 },
          {
            opacity: 1,
            y: 0,
            duration: 0.6,
            stagger: 0.12,
            ease: 'power2.out',
