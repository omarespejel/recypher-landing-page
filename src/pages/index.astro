          }
        );
      
        // Quote
        gsap.fromTo('.quote',
          { opacity: 0, y: 30 },
          {
            opacity: 1,
            y: 0,
            duration: titleDuration,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: '.quote',
              start: 'top 85%',
              toggleActions: 'play none none none',
            }
          }
        );
      
        // Track cards stagger
        gsap.fromTo('.track-card',
          { opacity: 0, y: 50 },
          {
            opacity: 1,
            y: 0,
            duration: cardDuration,
            stagger: cardStagger,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: '.tracks-grid',
              start: 'top 80%',
              toggleActions: 'play none none none',
            }
          }
        );

        // Details cards stagger
        gsap.fromTo('#details .card-shine',
          { opacity: 0, y: 50 },
          {
            opacity: 1,
            y: 0,
            duration: cardDuration,
            stagger: cardStagger,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: '#details',
              start: 'top 80%',
              toggleActions: 'play none none none',
            }
          }
        );
      
        // Support cards stagger
        gsap.fromTo('.support-card',
          { opacity: 0, y: 40 },
          {
            opacity: 1,
            y: 0,
            duration: cardDuration,
            stagger: cardStagger,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: '.support-grid',
              start: 'top 80%',
              toggleActions: 'play none none none',
            }
          }
        );
      
        // Mentors section
        gsap.fromTo('.mentors-section',
          { opacity: 0, y: 30 },
          {
            opacity: 1,
            y: 0,
            duration: cardDuration,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: '.mentors-section',
              start: 'top 85%',
              toggleActions: 'play none none none',
            }
          }
        );
      
        // Sponsors
        gsap.fromTo('.sponsors-grid',
          { opacity: 0, y: 30 },
          {
