          gyroscope: true,
        });

        const splitTargets = document.querySelectorAll('[data-split]');
        splitTargets.forEach((element) => {
          const text = element.textContent ?? '';
          element.textContent = '';
          [...text].forEach((char) => {
            const span = document.createElement('span');
            span.className = 'char';
            span.style.display = 'inline-block';
            span.textContent = char === ' ' ? '\u00A0' : char;
            element.appendChild(span);
          });
        });

        gsap.utils.toArray('[data-count-value]').forEach((element) => {
          const endValue = Number(element.dataset.countValue || 0);
          const prefix = element.dataset.countPrefix || '';
          const suffix = element.dataset.countSuffix || '';
          const counter = { value: 0 };
          element.textContent = `${prefix}0${suffix}`;

          gsap.to(counter, {
            value: endValue,
            duration: 2,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: element,
              start: 'top 85%',
              toggleActions: 'play none none none',
            },
            onUpdate: () => {
              element.textContent = `${prefix}${Math.round(counter.value)}${suffix}`;
            },
          });
        });
        
        // ==========================================
        // SMOOTH SCROLL (Lenis)
        // ==========================================
        const lenis = new Lenis({
          duration: 1.2,
          easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
          orientation: 'vertical',
          smoothWheel: true,
        });
        
        // Sync Lenis with GSAP ScrollTrigger
        lenis.on('scroll', ScrollTrigger.update);
        gsap.ticker.add((time) => lenis.raf(time * 1000));
        gsap.ticker.lagSmoothing(0);
        
        // ==========================================
        // HERO ANIMATIONS
        // ==========================================
        // Set initial states FIRST (before timeline)
        gsap.set('.hero-element:not(.hero-title)', { opacity: 0, y: 30 });
        gsap.set('.hero-meta', { opacity: 0 });
        gsap.set('.hero-title', { opacity: 1 });
        gsap.set('.hero-title .char', { opacity: 0, y: 20, rotationX: -90, transformOrigin: 'center' });
        
        // THEN create timeline
        const heroTl = gsap.timeline({ defaults: { ease: 'power3.out' } });
        
        // Hero elements stagger
        heroTl.to('.hero-element:not(.hero-title)', {
          opacity: 1,
          y: 0,
          duration: 1,
          stagger: 0.15,
        }, 0);

        heroTl.to('.hero-title .char', {
          opacity: 1,
          y: 0,
          rotationX: 0,
          duration: 0.8,
          stagger: 0.02,
          ease: 'back.out(1.7)',
        }, 0);
        
        // Meta elements (dates, foundation)
        heroTl.to('.hero-meta', {
          opacity: 1,
          duration: 0.8,
        }, 0.5);

        // ==========================================
        // MOUSE-FOLLOWING GRADIENT
        // ==========================================
        const heroSection = document.getElementById('main-content');
        if (heroSection && canHover) {
          const mouseGlow = document.createElement('div');
          mouseGlow.className = 'mouse-glow';
          heroSection.appendChild(mouseGlow);

          let mouseX = 0;
          let mouseY = 0;
          let currentX = 0;
          let currentY = 0;

          document.addEventListener('mousemove', (e) => {
            const rect = heroSection.getBoundingClientRect();
            mouseX = e.clientX - rect.left;
            mouseY = e.clientY - rect.top;
          });

          const animateMouseGlow = () => {
            currentX += (mouseX - currentX) * 0.08;
            currentY += (mouseY - currentY) * 0.08;
            mouseGlow.style.left = `${currentX}px`;
            mouseGlow.style.top = `${currentY}px`;
            requestAnimationFrame(animateMouseGlow);
          };
          animateMouseGlow();
        }
        
        // ==========================================
        // HERO PARALLAX
        // ==========================================
        gsap.to('.color-orb-1', {
          yPercent: -30,
          ease: 'none',
          scrollTrigger: {
            trigger: '#main-content',
            start: 'top top',
            end: 'bottom top',
            scrub: 1,
          }
        });
        
        gsap.to('.color-orb-2', {
          yPercent: -20,
          ease: 'none',
          scrollTrigger: {
            trigger: '#main-content',
            start: 'top top',
            end: 'bottom top',
            scrub: 1,
          }
        });
        
        gsap.to('.color-orb-3', {
          yPercent: -15,
          ease: 'none',
          scrollTrigger: {
            trigger: '#main-content',
            start: 'top top',
            end: 'bottom top',
            scrub: 1,
          }
        });
      
      // ==========================================
      // SCROLL ANIMATIONS
      // ==========================================
      
        // Section titles
        gsap.utils.toArray('.section-title').forEach(title => {
          gsap.fromTo(title, 
            { opacity: 0, y: 40 },
            {
              opacity: 1,
              y: 0,
              duration: 0.8,
              ease: 'power2.out',
              scrollTrigger: {
                trigger: title,
                start: 'top 85%',
                toggleActions: 'play none none none',
              }
            }
          );
        });
      
        // Section subtitles
        gsap.utils.toArray('.section-subtitle').forEach(sub => {
          gsap.fromTo(sub,
            { opacity: 0, y: 20 },
            {
              opacity: 1,
              y: 0,
              duration: 0.6,
              delay: 0.2,
              ease: 'power2.out',
              scrollTrigger: {
                trigger: sub,
                start: 'top 85%',
                toggleActions: 'play none none none',
              }
            }
          );
        });
      
        // Stats cards stagger
        gsap.fromTo('.stat-card',
          { opacity: 0, y: 50 },
          {
            opacity: 1,
            y: 0,
            duration: 0.7,
            stagger: 0.15,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: '.stats-grid',
              start: 'top 80%',
              toggleActions: 'play none none none',
            }
          }
        );
      
        // Quote
        gsap.fromTo('.quote',
          { opacity: 0, y: 30 },
          {
            opacity: 1,
            y: 0,
            duration: 0.8,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: '.quote',
              start: 'top 85%',
              toggleActions: 'play none none none',
            }
          }
        );
      
        // Track cards stagger
        gsap.fromTo('.track-card',
          { opacity: 0, y: 50 },
          {
            opacity: 1,
            y: 0,
            duration: 0.7,
            stagger: 0.15,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: '.tracks-grid',
              start: 'top 80%',
              toggleActions: 'play none none none',
            }
          }
        );

        // Details cards stagger
        gsap.fromTo('#details .card-shine',
          { opacity: 0, y: 50 },
          {
            opacity: 1,
            y: 0,
            duration: 0.7,
            stagger: 0.1,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: '#details',
              start: 'top 80%',
              toggleActions: 'play none none none',
            }
          }
        );
      
        // Support cards stagger
        gsap.fromTo('.support-card',
          { opacity: 0, y: 40 },
          {
            opacity: 1,
            y: 0,
            duration: 0.6,
            stagger: 0.12,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: '.support-grid',
              start: 'top 80%',
              toggleActions: 'play none none none',
            }
          }
        );
      
        // Mentors section
        gsap.fromTo('.mentors-section',
          { opacity: 0, y: 30 },
          {
            opacity: 1,
            y: 0,
            duration: 0.7,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: '.mentors-section',
              start: 'top 85%',
              toggleActions: 'play none none none',
            }
          }
        );
      
        // Sponsors
        gsap.fromTo('.sponsors-grid',
          { opacity: 0, y: 30 },
          {
            opacity: 1,
            y: 0,
            duration: 0.7,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: '.sponsors-grid',
              start: 'top 85%',
              toggleActions: 'play none none none',
            }
          }
        );
      
        // FAQ items stagger
        gsap.fromTo('.faq-item',
          { opacity: 0, y: 30 },
          {
            opacity: 1,
            y: 0,
            duration: 0.5,
            stagger: 0.1,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: '.faq-list',
              start: 'top 80%',
              toggleActions: 'play none none none',
            }
          }
        );
        
        // Resource cards stagger
        gsap.fromTo('.resource-card',
          { opacity: 0, y: 50, scale: 0.95 },
          {
            opacity: 1,
            y: 0,
            scale: 1,
            duration: 0.7,
            stagger: 0.15,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: '.resources-grid',
              start: 'top 80%',
              toggleActions: 'play none none none',
            }
          }
        );
      
        // Final CTA
        gsap.fromTo('.cta-button',
          { opacity: 0, y: 20, scale: 0.95 },
          {
            opacity: 1,
            y: 0,
            scale: 1,
            duration: 0.6,
            ease: 'back.out(1.7)',
            scrollTrigger: {
              trigger: '.cta-button',
              start: 'top 90%',
              toggleActions: 'play none none none',
            }
          }
        );
        
        // Scroll progress indicator
        const scrollProgress = document.getElementById('scroll-progress');
        if (scrollProgress) {
          gsap.to(scrollProgress, {
            width: '100%',
            ease: 'none',
            scrollTrigger: {
              trigger: 'body',
              start: 'top top',
              end: 'bottom bottom',
              scrub: 0.3
            }
          });
        }
      }
      
      // ==========================================
      // FAQ ACCORDION
      // ==========================================
      const faqItems = document.querySelectorAll('.faq-item');
      faqItems.forEach((item) => {
        const toggle = item.querySelector('.faq-toggle');
        const answer = item.querySelector('.faq-answer');
        const chevron = item.querySelector('.faq-chevron');
        
        if (!toggle || !answer) return;
        
        toggle.addEventListener('click', () => {
          const isOpen = item.getAttribute('data-state') === 'open';
          
          faqItems.forEach((otherItem) => {
            if (otherItem === item) return;
            otherItem.setAttribute('data-state', 'closed');
            const otherToggle = otherItem.querySelector('.faq-toggle');
            const otherAnswer = otherItem.querySelector('.faq-answer');
            const otherChevron = otherItem.querySelector('.faq-chevron');
            if (otherToggle) otherToggle.setAttribute('aria-expanded', 'false');
            if (otherAnswer) otherAnswer.style.maxHeight = '0px';
            if (otherChevron) otherChevron.classList.remove('rotate-180');
          });
          
          item.setAttribute('data-state', isOpen ? 'closed' : 'open');
          toggle.setAttribute('aria-expanded', isOpen ? 'false' : 'true');
          answer.style.maxHeight = isOpen ? '0px' : `${answer.scrollHeight}px`;
          if (chevron) chevron.classList.toggle('rotate-180', !isOpen);
        });
      });
      } // End window check
    </script>

  </body>
</html>
