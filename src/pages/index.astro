              toggleActions: 'play none none none',
            }
          }
        );
      
        // Track cards stagger
        gsap.fromTo('.track-card',
          { opacity: 0, y: 50 },
          {
            opacity: 1,
            y: 0,
            duration: 0.7,
            stagger: 0.15,
            ease: 'power2.out',
            scrollTrigger: {
