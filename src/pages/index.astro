        );
      
        // FAQ items stagger
        gsap.fromTo('.faq-item',
          { opacity: 0, y: 30 },
          {
            opacity: 1,
            y: 0,
            duration: 0.5,
            stagger: 0.1,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: '.faq-list',
              start: 'top 80%',
              toggleActions: 'play none none none',
            }
          }
        );
        
        // Resource cards stagger
        gsap.fromTo('.resource-card',
          { opacity: 0, y: 50, scale: 0.95 },
          {
            opacity: 1,
            y: 0,
            scale: 1,
            duration: 0.7,
            stagger: 0.15,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: '.resources-grid',
              start: 'top 80%',
              toggleActions: 'play none none none',
            }
          }
        );
      
        // Final CTA
        gsap.fromTo('.cta-button',
          { opacity: 0, y: 20, scale: 0.95 },
          {
            opacity: 1,
            y: 0,
            scale: 1,
            duration: 0.6,
            ease: 'back.out(1.7)',
            scrollTrigger: {
              trigger: '.cta-button',
              start: 'top 90%',
              toggleActions: 'play none none none',
            }
          }
        );
      }
      } // End window check
    </script>

