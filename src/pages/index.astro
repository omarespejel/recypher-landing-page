    <script define:vars={{ countdownLabels, personalizationCopy }}>
      import { gsap } from 'gsap';
      import { ScrollTrigger } from 'gsap/ScrollTrigger';
      import Lenis from '@studio-freight/lenis';
      import VanillaTilt from 'vanilla-tilt';
      import { createNoise3D } from 'simplex-noise';
      
      // Ensure this runs only on client
      if (typeof window !== 'undefined') {
      const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      if (prefersReducedMotion) {
        document.documentElement.classList.add('reduced-motion');
      }
      const isNeo = document.documentElement.classList.contains('neo-brutal');

      const heroSubtitleLine = document.querySelector('.hero-subtitle-line');
      if (heroSubtitleLine) {
        const trackParam = new URLSearchParams(window.location.search).get('track');
        if (trackParam === 'privacy') {
          heroSubtitleLine.textContent = personalizationCopy.privacy;
        }
      }
      
      const secondaryCta = document.querySelector('.secondary-cta');
      const heroSection = document.querySelector('#main-content');
      if (secondaryCta && heroSection) {
        const observer = new IntersectionObserver(
          ([entry]) => {
            if (entry.isIntersecting) {
              secondaryCta.classList.add('is-hidden');
            } else {
              secondaryCta.classList.remove('is-hidden');
            }
          },
          { threshold: 0.4 }
        );
        observer.observe(heroSection);
      }

      const canHover = window.matchMedia('(hover: hover) and (pointer: fine)').matches;
      if (canHover && !isNeo) {
        const cursor = document.createElement('div');
        const cursorRing = document.createElement('div');
        cursor.className = 'custom-cursor';
        cursorRing.className = 'custom-cursor-ring';
        document.body.append(cursor, cursorRing);
        document.documentElement.classList.add('custom-cursor-enabled');

        let mouseX = 0;
        let mouseY = 0;
        let ringX = 0;
        let ringY = 0;

        const updateCursor = () => {
          const ringScale = cursorRing.classList.contains('cursor-ring-active') ? 1.2 : 1;
          ringX += (mouseX - ringX) * 0.15;
          ringY += (mouseY - ringY) * 0.15;
          cursor.style.transform = `translate(${mouseX - 4}px, ${mouseY - 4}px)`;
          cursorRing.style.transform = `translate(${ringX}px, ${ringY}px) scale(${ringScale})`;
          requestAnimationFrame(updateCursor);
        };

        window.addEventListener('mousemove', (event) => {
          mouseX = event.clientX;
          mouseY = event.clientY;
          cursor.style.opacity = '1';
          cursorRing.style.opacity = '1';
        });

        window.addEventListener('mouseleave', () => {
          cursor.style.opacity = '0';
          cursorRing.style.opacity = '0';
        });

        document.querySelectorAll('a, button, [role=\"button\"]').forEach((el) => {
          el.addEventListener('mouseenter', () => {
            cursorRing.classList.add('cursor-ring-active');
          });
          el.addEventListener('mouseleave', () => {
            cursorRing.classList.remove('cursor-ring-active');
          });
        });

        updateCursor();
      }

      const gradientCanvas = document.getElementById('gradient-canvas');
      if (gradientCanvas && !prefersReducedMotion && !isNeo) {
        const ctx = gradientCanvas.getContext('2d');
        const noise3D = createNoise3D();

        const resizeCanvas = () => {
          gradientCanvas.width = gradientCanvas.offsetWidth * window.devicePixelRatio;
          gradientCanvas.height = gradientCanvas.offsetHeight * window.devicePixelRatio;
        };

        const colors = [
          'rgba(91, 126, 207, 0.35)',
          'rgba(139, 92, 246, 0.25)',
          'rgba(59, 130, 246, 0.2)',
          'rgba(249, 115, 22, 0.15)',
        ];

        const render = (time) => {
          if (!ctx) return;
          ctx.clearRect(0, 0, gradientCanvas.width, gradientCanvas.height);
          const t = time * 0.0002;
          colors.forEach((color, index) => {
            const x = (noise3D(index, t, 0) * 0.5 + 0.5) * gradientCanvas.width;
            const y = (noise3D(0, index, t) * 0.5 + 0.5) * gradientCanvas.height;
            const radius = gradientCanvas.width * 0.6;
            const gradient = ctx.createRadialGradient(x, y, 0, x, y, radius);
            gradient.addColorStop(0, color);
            gradient.addColorStop(1, 'rgba(0,0,0,0)');
            ctx.fillStyle = gradient;
            ctx.fillRect(0, 0, gradientCanvas.width, gradientCanvas.height);
          });
          requestAnimationFrame(render);
        };

        resizeCanvas();
        window.addEventListener('resize', resizeCanvas);
        requestAnimationFrame(render);
      }

      
      if (!prefersReducedMotion) {
        // Register GSAP plugins
        document.documentElement.classList.add('anim-ready');
        gsap.registerPlugin(ScrollTrigger);
        gsap.set('.track-card', { willChange: 'transform' });
        ScrollTrigger.create({
          trigger: '.tracks-grid',
          start: 'top bottom',
          end: 'bottom top',
          onLeave: () => gsap.set('.track-card', { willChange: 'auto' }),
          onEnterBack: () => gsap.set('.track-card', { willChange: 'transform' }),
        });

        if (!isNeo) {
        VanillaTilt.init(document.querySelectorAll('.track-card'), {
          max: 5,
          speed: 400,
          glare: true,
          'max-glare': 0.15,
          gyroscope: true,
        });
        }

        const splitTargets = document.querySelectorAll('[data-split]');
        splitTargets.forEach((element) => {
          const text = element.textContent ?? '';
          element.textContent = '';
          [...text].forEach((char) => {
            const span = document.createElement('span');
            span.className = 'char';
            span.style.display = 'inline-block';
            span.textContent = char === ' ' ? '\u00A0' : char;
            element.appendChild(span);
          });
        });

        gsap.utils.toArray('[data-count-value]').forEach((element) => {
          const endValue = Number(element.dataset.countValue || 0);
          const prefix = element.dataset.countPrefix || '';
          const suffix = element.dataset.countSuffix || '';
          const counter = { value: 0 };
          element.textContent = `${prefix}0${suffix}`;

          gsap.to(counter, {
            value: endValue,
            duration: 2,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: element,
              start: 'top 85%',
              toggleActions: 'play none none none',
            },
            onUpdate: () => {
              element.textContent = `${prefix}${Math.round(counter.value)}${suffix}`;
            },
          });
        });
        
        // ==========================================
        // SMOOTH SCROLL (Lenis)
        // ==========================================
        const lenis = new Lenis({
          duration: 1.2,
          easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
          orientation: 'vertical',
          smoothWheel: true,
        });
        
        // Sync Lenis with GSAP ScrollTrigger
        lenis.on('scroll', ScrollTrigger.update);
        gsap.ticker.add((time) => lenis.raf(time * 1000));
        gsap.ticker.lagSmoothing(0);
        
        // ==========================================
        // HERO ANIMATIONS
        // ==========================================
        // Set initial states FIRST (before timeline)
        gsap.set('.hero-element:not(.hero-title)', { opacity: 0, y: isNeo ? 18 : 30 });
        gsap.set('.hero-meta', { opacity: 0 });
        gsap.set('.hero-title', { opacity: 1 });
        gsap.set('.hero-title .char', isNeo
          ? { opacity: 0, y: 16 }
          : { opacity: 0, y: 20, rotationX: -90, transformOrigin: 'center' }
        );
        
        // THEN create timeline
        const heroTl = gsap.timeline({ defaults: { ease: isNeo ? 'power1.out' : 'power3.out' } });
        
        // Hero elements stagger
        heroTl.to('.hero-element:not(.hero-title)', {
          opacity: 1,
          y: 0,
          duration: isNeo ? 0.45 : 1,
          stagger: isNeo ? 0.08 : 0.15,
        }, 0);

        heroTl.to('.hero-title .char', isNeo
          ? {
              opacity: 1,
              y: 0,
              duration: 0.35,
              stagger: 0.02,
              ease: 'power1.out',
            }
          : {
          opacity: 1,
          y: 0,
          rotationX: 0,
          duration: 0.8,
          stagger: 0.02,
          ease: 'back.out(1.7)',
            }, 0
        );
        
        // Meta elements (dates, foundation)
        heroTl.to('.hero-meta', {
          opacity: 1,
          duration: isNeo ? 0.35 : 0.8,
        }, isNeo ? 0.2 : 0.5);

        // ==========================================
        // MOUSE-FOLLOWING GRADIENT
        // ==========================================
        const heroSection = document.getElementById('main-content');
        if (heroSection && canHover && !isNeo) {
          const mouseGlow = document.createElement('div');
          mouseGlow.className = 'mouse-glow';
          heroSection.appendChild(mouseGlow);

          let mouseX = 0;
          let mouseY = 0;
          let currentX = 0;
          let currentY = 0;

          document.addEventListener('mousemove', (e) => {
            const rect = heroSection.getBoundingClientRect();
            mouseX = e.clientX - rect.left;
            mouseY = e.clientY - rect.top;
          });

          const animateMouseGlow = () => {
            currentX += (mouseX - currentX) * 0.08;
            currentY += (mouseY - currentY) * 0.08;
            mouseGlow.style.left = `${currentX}px`;
            mouseGlow.style.top = `${currentY}px`;
            requestAnimationFrame(animateMouseGlow);
          };
          animateMouseGlow();
        }
        
        // ==========================================
        // HERO PARALLAX (MOUSE + SCROLL)
        // ==========================================
        if (heroSection && !isNeo) {
          const parallaxLayers = [
            { el: heroSection.querySelector('.parallax-astronauts'), strength: 14 },
          ].filter((layer) => layer.el);

          let targetX = 0;
          let targetY = 0;
          let currentX = 0;
          let currentY = 0;

          if (canHover) {
            heroSection.addEventListener('mousemove', (event) => {
              const rect = heroSection.getBoundingClientRect();
              const relX = (event.clientX - rect.left) / rect.width - 0.5;
              const relY = (event.clientY - rect.top) / rect.height - 0.5;
              targetX = relX * 2;
              targetY = relY * 2;
            });

            heroSection.addEventListener('mouseleave', () => {
              targetX = 0;
              targetY = 0;
            });
          }

          const updateParallax = () => {
            currentX += (targetX - currentX) * 0.06;
            currentY += (targetY - currentY) * 0.06;
            const scrollFactor = Math.min(1, window.scrollY / window.innerHeight);
            parallaxLayers.forEach((layer) => {
              const x = currentX * layer.strength;
              const y = currentY * layer.strength + scrollFactor * (layer.strength * 0.6);
              layer.el.style.transform = `translate3d(${x}px, ${y}px, 0)`;
            });
            requestAnimationFrame(updateParallax);
          };

          updateParallax();

        }
        
        // ==========================================
        // HERO PARALLAX
        // ==========================================
        if (!isNeo) {
        gsap.to('.color-orb-1', {
          yPercent: -30,
          ease: 'none',
          scrollTrigger: {
            trigger: '#main-content',
            start: 'top top',
            end: 'bottom top',
            scrub: 1,
          }
        });
        
        gsap.to('.color-orb-2', {
          yPercent: -20,
          ease: 'none',
          scrollTrigger: {
            trigger: '#main-content',
            start: 'top top',
            end: 'bottom top',
            scrub: 1,
          }
        });
        
        gsap.to('.color-orb-3', {
          yPercent: -15,
          ease: 'none',
          scrollTrigger: {
            trigger: '#main-content',
            start: 'top top',
            end: 'bottom top',
            scrub: 1,
          }
        });
        }
      
      // ==========================================
      // SCROLL ANIMATIONS
      // ==========================================
        const titleDuration = isNeo ? 0.45 : 0.8;
        const subtitleDuration = isNeo ? 0.35 : 0.6;
        const cardDuration = isNeo ? 0.45 : 0.7;
        const cardStagger = isNeo ? 0.08 : 0.15;
      
        // Section titles
        gsap.utils.toArray('.section-title').forEach(title => {
          gsap.fromTo(title, 
            { opacity: 0, y: 40 },
            {
              opacity: 1,
              y: 0,
              duration: titleDuration,
              ease: 'power2.out',
              scrollTrigger: {
                trigger: title,
                start: 'top 85%',
                toggleActions: 'play none none none',
              }
            }
          );
        });
      
        // Section subtitles
        gsap.utils.toArray('.section-subtitle').forEach(sub => {
          gsap.fromTo(sub,
            { opacity: 0, y: 20 },
            {
              opacity: 1,
              y: 0,
              duration: subtitleDuration,
              delay: isNeo ? 0.05 : 0.2,
              ease: 'power2.out',
              scrollTrigger: {
                trigger: sub,
                start: 'top 85%',
                toggleActions: 'play none none none',
              }
            }
          );
        });
      
        // Stats cards stagger
        gsap.fromTo('.stat-card',
          { opacity: 0, y: 50 },
          {
            opacity: 1,
            y: 0,
            duration: cardDuration,
            stagger: cardStagger,
            ease: 'power2.out',
            scrollTrigger: {
              trigger: '.stats-grid',
              start: 'top 80%',
              toggleActions: 'play none none none',
