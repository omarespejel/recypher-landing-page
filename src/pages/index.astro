        <!-- Base gradient -->
        <div class="absolute inset-0 bg-gradient-to-b from-snf-blue-900/10 via-transparent to-transparent"></div>
        
        <!-- Two subtle gradient orbs - Bitcoin (orange) & Privacy (purple) -->
        <div class="hero-orb hero-orb-1"></div>
        <div class="hero-orb hero-orb-3"></div>
        
        <!-- Subtle network mesh - represents blockchain/Starknet -->
        <svg class="absolute inset-0 w-full h-full opacity-10" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <radialGradient id="node-glow" cx="50%" cy="50%" r="50%">
              <stop offset="0%" stop-color="rgba(91, 126, 207, 0.6)" />
              <stop offset="100%" stop-color="rgba(91, 126, 207, 0)" />
            </radialGradient>
          </defs>
          <!-- Minimal connection lines -->
          <g class="network-lines">
            <line x1="15%" y1="25%" x2="35%" y2="40%" stroke="url(#node-glow)" stroke-width="0.5" class="network-line line-1" />
            <line x1="65%" y1="30%" x2="85%" y2="50%" stroke="url(#node-glow)" stroke-width="0.5" class="network-line line-3" />
          </g>
          <!-- Minimal nodes -->
          <g class="network-nodes">
            <circle cx="15%" cy="25%" r="2" fill="url(#node-glow)" class="network-node node-1" />
            <circle cx="35%" cy="40%" r="3" fill="url(#node-glow)" class="network-node node-2" />
            <circle cx="65%" cy="30%" r="2" fill="url(#node-glow)" class="network-node node-4" />
            <circle cx="85%" cy="50%" r="3" fill="url(#node-glow)" class="network-node node-5" />
          </g>
