---
// src/pages/index.astro
import '../styles/global.css';
import ArrowRight from '../components/icons/ArrowRight.astro';
import Bitcoin from '../components/icons/Bitcoin.astro';
import BookOpen from '../components/icons/BookOpen.astro';
import ChevronDown from '../components/icons/ChevronDown.astro';
import GraduationCap from '../components/icons/GraduationCap.astro';
import Monitor from '../components/icons/Monitor.astro';
import Shield from '../components/icons/Shield.astro';
import Users from '../components/icons/Users.astro';

const hackathonName = 'Re{cypher}';

const tracks = [
  {
    name: "Privacy Track",
    prize: "$6,000",
    percentage: "40%",
    description: "Build privacy-preserving applications using STARKs, zero-knowledge proofs, and confidential transactions on Starknet.",
    examples: ["Private payments", "Anonymous voting", "Confidential DeFi", "Data sovereignty"]
  },
  {
    name: "Bitcoin Track", 
    prize: "$6,000",
    percentage: "40%",
    description: "Create trustless Bitcoin bridges, OP_CAT applications, and BTC-native DeFi leveraging Starknet's security.",
    examples: ["BTC bridges", "Ordinals on Starknet", "Lightning integrations", "Bitcoin DeFi"]
  },
  {
    name: "Open Track",
    prize: "$3,000", 
    percentage: "20%",
    description: "Build anything innovative on Starknet. Gaming, social, infrastructure—surprise us.",
    examples: ["Gaming", "Social apps", "Dev tools", "Infrastructure"]
  }
];

const mentors = [
  { name: "Omar Espejel", role: "Developer Advocate", org: "Starknet Foundation", image: "/mentors/omar.jpg" },
  { name: "Henri", role: "Ecosystem Lead", org: "Starknet Foundation", image: "/mentors/henri.jpg" },
];

const sponsors = [
  { name: "Starknet Foundation", logo: "/sponsors/starknet.svg" },
  { name: "StarkWare", logo: "/sponsors/starkware.svg" },
];

const faqs = [
  {
    q: "Who can participate?",
    a: "Anyone! Solo developers and teams up to 5 members. No geographic restrictions. All skill levels welcome."
  },
  {
    q: "Do I need to know Cairo?",
    a: "Not required to start. We provide learning resources through Starknet Academy and DoraHacks AI assistance."
  },
  {
    q: "What happens to winners?",
    a: "Winners get fast-tracked to Starknet Foundation's accelerator program with $25k-$500k grant pipeline and VC introductions."
  },
  {
    q: "Is it fully virtual?",
    a: "Yes. Build at your own pace. Submit on DoraHacks by February 28, 2026."
  }
];

const stats = [
  { value: "STWO", label: "StarkWare's fastest ZK prover deployed on Starknet mainnet in 2025, delivering 100x efficiency gains to enable scalable privacy, faster proofs, lower costs, and new confidential use cases like shielded transactions and private DeFi" },
  { value: "$200M+", label: "BTC staked natively on Starknet through trustless staking, powering BTCFi with real yields, liquid staking, and Bitcoin-backed DeFi without wrappers or soft forks" },
  { value: "Ztarknet", label: "Starknet's programmable privacy layer integrating Zcash shielding with Cairo smart contracts, enabling quantum-safe, confidential compute for Bitcoin-integrated apps" },
];

const resources = [
  {
    title: "Bitcoin on Starknet",
    description: "Build trustless BTC bridges and OP_CAT apps",
    icon: "bitcoin",
    link: "#",
    linkText: "Start Tutorial →",
    gradient: "from-orange-500/20 to-orange-600/5"
  },
  {
    title: "Privacy Development",
    description: "Master ZK proofs and confidential transactions",
    icon: "shield",
    link: "#",
    linkText: "Learn Privacy →",
    gradient: "from-purple-500/20 to-purple-600/5"
  },
  {
    title: "Starknet Academy",
    description: "Complete Cairo & Starknet fundamentals",
    icon: "academic",
    link: "https://www.starknet.io/learn/",
    linkText: "Visit Academy →",
    gradient: "from-snf-blue-500/20 to-snf-blue-700/5"
  }
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={`${hackathonName}: Bitcoin × Privacy Hackathon. $15,000 in prizes. Build the future of private, trustless applications on Starknet. February 1 - February 28, 2026.`} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={`${hackathonName} | Bitcoin × Privacy Hackathon`} />
    <meta property="og:description" content="$15,000 in prizes. Build private, trustless applications on Starknet." />
    <meta property="og:image" content="https://bitcoinxprivacy.com/og-image.jpg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:url" content="https://bitcoinxprivacy.com" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={`${hackathonName} Hackathon`} />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="https://bitcoinxprivacy.com/og-image.jpg" />
    <meta name="twitter:site" content="@Starknet" />
    <meta name="twitter:creator" content="@StarknetFndn" />
    
    <!-- SEO & Accessibility -->
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#0C0A18" />
    <link rel="canonical" href="https://bitcoinxprivacy.com" />
    
    <title>{`${hackathonName} | Bitcoin × Privacy Hackathon`}</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Space+Grotesk:wght@500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Global Styles -->
    <style is:global>
      html {
        scroll-behavior: auto; /* Lenis handles smooth scroll */
      }
      
      body {
        background-color: #0C0A18;
        color: #F3F2F1;
        font-family: 'Inter', system-ui, sans-serif;
        overflow-x: hidden;
      }
      
      .font-display {
        font-family: 'Space Grotesk', system-ui, sans-serif;
      }
      
      /* Hide elements before GSAP animation */
      .gs-hidden {
        opacity: 0;
      }

      @media (prefers-reduced-motion: reduce) {
        .gs-hidden {
          opacity: 1;
          transform: none;
        }
      }

      .reduced-motion .gs-hidden {
        opacity: 1 !important;
        transform: none !important;
      }
    </style>
  </head>
  
  <body class="antialiased">
    
    <!-- Skip to content link for accessibility -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-snf-blue-500 text-white px-4 py-2 rounded-lg z-[100] focus:ring-2 focus:ring-snf-blue-500 focus:ring-offset-2 focus:ring-offset-snf-black focus:outline-none">
      Skip to content
    </a>

    <!-- SVG Gradient Definitions -->
    <svg width="0" height="0" class="hidden" aria-hidden="true" focusable="false">
      <defs>
        <linearGradient id="icon-gradient-blue" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#5B7ECF" />
          <stop offset="100%" style="stop-color:#8B5CF6" />
        </linearGradient>
        <linearGradient id="icon-gradient-orange" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#F97316" />
          <stop offset="100%" style="stop-color:#FBBF24" />
        </linearGradient>
        <linearGradient id="icon-gradient-purple" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#8B5CF6" />
          <stop offset="100%" style="stop-color:#EC4899" />
        </linearGradient>
      </defs>
    </svg>
    
    <noscript>
      <style>
        .gs-hidden { opacity: 1 !important; transform: none !important; }
      </style>
    </noscript>
    
    <!-- Navigation -->
    <nav class="fixed top-0 w-full z-50 bg-snf-black/80 backdrop-blur-md border-b border-snf-blue-900/30">
      <div class="max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
        <span class="font-display font-bold text-xl text-snf-white">{hackathonName}</span>
        <a 
          href="https://dorahacks.io/hackathon/recypher" 
          target="_blank"
          rel="noopener noreferrer"
          class="bg-snf-blue-500 hover:bg-snf-blue-700 text-snf-white px-5 py-2 rounded-lg font-medium transition-colors duration-300 focus:ring-2 focus:ring-snf-blue-500 focus:ring-offset-2 focus:ring-offset-snf-black focus:outline-none"
        >
          Register Now
        </a>
      </div>
    </nav>

    <!-- ============================================ -->
    <!-- HERO SECTION -->
    <!-- ============================================ -->
    <section id="main-content" class="min-h-screen flex items-center justify-center px-6 relative overflow-hidden dynamic-gradient-bg">
      
      <!-- Dynamic Aurora Background -->
      <div class="aurora-bg"></div>
      
      <!-- Animated color orbs -->
      <div class="absolute inset-0 pointer-events-none overflow-hidden">
        <div class="color-orb color-orb-1"></div>
        <div class="color-orb color-orb-2"></div>
        <div class="color-orb color-orb-3"></div>
      </div>
      
      <!-- Subtle grid pattern -->
      <div class="absolute inset-0 pointer-events-none opacity-[0.02]" style="background-image: linear-gradient(rgba(91, 126, 207, 0.5) 1px, transparent 1px), linear-gradient(90deg, rgba(91, 126, 207, 0.5) 1px, transparent 1px); background-size: 60px 60px;"></div>
      
      <!-- Main Content -->
      <div class="relative z-10 text-center max-w-4xl mx-auto">
        
        <!-- Floating badge -->
        <div class="hero-element gs-hidden inline-flex items-center gap-2 bg-snf-blue-900/40 border border-snf-blue-500/30 rounded-full px-4 py-1.5 mb-8">
          <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
          <span class="text-snf-white/70 text-sm">Registration Open · 2026</span>
        </div>
        
        <!-- Main Title with gradient -->
        <h1 class="hero-element gs-hidden font-display text-5xl md:text-7xl lg:text-8xl font-bold leading-[0.9] mb-4">
          <span class="gradient-text">BITCOIN ×</span><br/>
          <span class="text-snf-white">PRIVACY</span>
        </h1>
        
        <!-- Hackathon Name -->
        <p class="hero-element gs-hidden font-display text-4xl md:text-5xl lg:text-6xl italic text-snf-blue-500 mb-4">
          {hackathonName}
        </p>
        
        <!-- Subheadline -->
        <p class="hero-element gs-hidden text-snf-white/60 text-lg md:text-xl max-w-xl mx-auto mb-10">
          Build privacy-preserving, trustless Bitcoin applications on Starknet.<br class="hidden md:block" />
          <span class="text-snf-blue-500 font-medium">$15,000 in prizes.</span>
        </p>
        
        <!-- Countdown Timer -->
        <div class="hero-element gs-hidden mb-10">
          <p class="text-snf-white/40 text-xs tracking-[0.3em] uppercase mb-4">Starts In</p>
          <div class="flex justify-center gap-2 md:gap-4" id="countdown">
            <div class="countdown-unit glass rounded-xl px-4 py-3 md:px-6 md:py-4">
              <span class="block text-3xl md:text-5xl lg:text-6xl font-light tabular-nums text-snf-white" id="days" aria-live="polite">00</span>
              <p class="text-snf-white/30 text-[10px] tracking-[0.2em] mt-1">DAYS</p>
            </div>
            <span class="text-3xl md:text-5xl lg:text-6xl font-light text-snf-white/10 self-center" aria-hidden="true">:</span>
            <div class="countdown-unit glass rounded-xl px-4 py-3 md:px-6 md:py-4">
              <span class="block text-3xl md:text-5xl lg:text-6xl font-light tabular-nums text-snf-white" id="hours" aria-live="polite">00</span>
              <p class="text-snf-white/30 text-[10px] tracking-[0.2em] mt-1">HRS</p>
            </div>
            <span class="text-3xl md:text-5xl lg:text-6xl font-light text-snf-white/10 self-center" aria-hidden="true">:</span>
            <div class="countdown-unit glass rounded-xl px-4 py-3 md:px-6 md:py-4">
              <span class="block text-3xl md:text-5xl lg:text-6xl font-light tabular-nums text-snf-white" id="mins" aria-live="polite">00</span>
              <p class="text-snf-white/30 text-[10px] tracking-[0.2em] mt-1">MIN</p>
            </div>
            <span class="text-3xl md:text-5xl lg:text-6xl font-light text-snf-white/10 self-center" aria-hidden="true">:</span>
            <div class="countdown-unit glass rounded-xl px-4 py-3 md:px-6 md:py-4">
              <span class="block text-3xl md:text-5xl lg:text-6xl font-light tabular-nums text-snf-white" id="secs" aria-live="polite">00</span>
              <p class="text-snf-white/30 text-[10px] tracking-[0.2em] mt-1">SEC</p>
            </div>
          </div>
        </div>
        
        <!-- CTA Buttons -->
        <div class="hero-element gs-hidden flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="https://dorahacks.io/hackathon/recypher" 
            target="_blank"
            rel="noopener noreferrer"
            class="cta-glow inline-flex items-center justify-center bg-snf-blue-500 hover:bg-snf-blue-700 text-snf-white px-8 py-4 rounded-full font-semibold text-lg transition-all duration-300 hover:scale-105 focus:ring-2 focus:ring-snf-blue-500 focus:ring-offset-2 focus:ring-offset-snf-black focus:outline-none group"
          >
            Register Now
            <ArrowRight class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" strokeWidth={2} />
          </a>
          <a 
            href="#tracks"
            class="inline-flex items-center justify-center border border-snf-white/20 hover:border-snf-white/40 text-snf-white/70 hover:text-snf-white px-8 py-4 rounded-full font-medium text-lg transition-all duration-300 focus:ring-2 focus:ring-snf-blue-500 focus:ring-offset-2 focus:ring-offset-snf-black focus:outline-none"
          >
            View Tracks
          </a>
        </div>
        
      </div>
      
      <!-- Bottom Left: Dates -->
      <div class="absolute bottom-8 left-8 text-left hidden md:block">
        <p class="hero-meta gs-hidden font-mono text-sm text-snf-white/40">
          FEB 1 → FEB 28<br/>
          <span class="text-snf-white/60">2026</span>
        </p>
      </div>
      
      <!-- Bottom Right: Starknet Foundation -->
      <div class="absolute bottom-8 right-8 text-right hidden md:block">
        <p class="hero-meta gs-hidden text-sm text-snf-white/40">
          Powered by<br/>
          <span class="text-snf-blue-500 font-medium">Starknet Foundation</span>
        </p>
      </div>
      
      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 hidden md:block">
        <div class="hero-meta gs-hidden animate-float">
          <ChevronDown class="w-6 h-6 text-snf-white/30" strokeWidth={1.5} />
        </div>
      </div>
      
    </section>

    <!-- ============================================ -->
    <!-- WHY NOW SECTION -->
    <!-- ============================================ -->
    <section id="tracks" class="py-24 md:py-32 px-6 border-t border-snf-blue-900/30">
      <div class="max-w-6xl mx-auto">
        
        <h2 class="section-title gs-hidden font-display text-3xl md:text-4xl lg:text-5xl font-bold mb-16 text-center">
          Why 2026 is the Year for Privacy
        </h2>
        
        <div class="stats-grid grid md:grid-cols-3 gap-6 md:gap-8">
          {stats.map((stat, i) => (
            <div class="stat-card gs-hidden bg-gradient-to-b from-snf-blue-900/30 to-snf-blue-900/5 border border-snf-blue-900/40 rounded-2xl p-8 hover:border-snf-blue-500/50 transition-colors duration-300">
              <div class="text-snf-blue-500 text-4xl md:text-5xl font-bold mb-4">{stat.value}</div>
              <p class="text-snf-white/60 leading-relaxed">{stat.label}</p>
            </div>
          ))}
        </div>
        
        <blockquote class="quote gs-hidden mt-16 text-center">
          <p class="text-xl md:text-2xl text-snf-white/50 italic max-w-3xl mx-auto leading-relaxed">
            "The next 8 years in crypto will be the Privacy Era."
          </p>
          <cite class="block text-snf-blue-500 not-italic mt-4 text-base font-medium">
            — Balaji Srinivasan, The 3 Eras of Crypto podcast, January 1, 2026 (<a href="https://www.youtube.com/watch?v=u3B8xqsf66w" target="_blank" rel="noopener noreferrer" class="underline hover:text-snf-blue-700 transition-colors">source</a>)
          </cite>
        </blockquote>

        <blockquote class="quote gs-hidden mt-8 text-center">
          <p class="text-xl md:text-2xl text-snf-white/50 italic max-w-3xl mx-auto leading-relaxed">
            "Privacy is the one feature that's critical for the world's finance to move onchain."
          </p>
          <cite class="block text-snf-blue-500 not-italic mt-4 text-base font-medium">
            — a16z crypto, '17 things we're excited about for crypto in 2026', December 2025 (<a href="https://a16zcrypto.com/posts/article/big-ideas-things-excited-about-crypto-2026/" target="_blank" rel="noopener noreferrer" class="underline hover:text-snf-blue-700 transition-colors">source</a>)
          </cite>
        </blockquote>
        
      </div>
    </section>

    <!-- ============================================ -->
    <!-- TRACKS SECTION -->
    <!-- ============================================ -->
    <section class="py-24 md:py-32 px-6 border-t border-snf-blue-900/30">
      <div class="max-w-6xl mx-auto">
        
        <div class="text-center mb-16">
          <h2 class="section-title gs-hidden font-display text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
            Tracks & Prizes
          </h2>
          <p class="section-subtitle gs-hidden text-snf-white/50 text-lg">
            $15,000 total prize pool from Starknet Foundation
          </p>
        </div>
        
        <div class="tracks-grid grid md:grid-cols-3 gap-6">
          {tracks.map((track, i) => (
            <div class="track-card card-shine gs-hidden bg-gradient-to-b from-snf-blue-900/30 to-transparent border border-snf-blue-900/40 rounded-2xl p-8 hover:border-snf-blue-500/50 transition-all duration-500 hover:-translate-y-2 hover:shadow-xl hover:shadow-snf-blue-500/10">
              
              <div class="flex justify-between items-start mb-6">
                <h3 class="font-display text-xl font-semibold">{track.name}</h3>
                <span class="text-snf-blue-500 text-sm font-medium bg-snf-blue-500/10 px-3 py-1 rounded-full">{track.percentage}</span>
              </div>
              
              <div class="text-4xl font-bold text-snf-blue-500 mb-6">{track.prize}</div>
              
              <p class="text-snf-white/60 text-sm mb-6 leading-relaxed">{track.description}</p>
              
              <div class="flex flex-wrap gap-2">
                {track.examples.map((ex) => (
                  <span class="text-xs bg-snf-blue-900/50 px-3 py-1.5 rounded-full text-snf-white/50">{ex}</span>
                ))}
              </div>
              
            </div>
          ))}
        </div>
        
      </div>
    </section>

    <!-- ============================================ -->
    <!-- LEARNING RESOURCES SECTION -->
    <!-- ============================================ -->
    <section class="py-24 md:py-32 px-6 border-t border-snf-blue-900/30 relative overflow-hidden">
      
      <!-- Subtle gradient accent -->
      <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[400px] bg-snf-blue-500/5 rounded-full blur-[100px] pointer-events-none"></div>
      
      <div class="max-w-6xl mx-auto relative">
        
        <div class="text-center mb-16">
          <p class="section-subtitle gs-hidden text-snf-blue-500 text-sm tracking-[0.2em] uppercase mb-4">Get Started</p>
          <h2 class="section-title gs-hidden font-display text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
            Learning Paths
          </h2>
          <p class="gs-hidden text-snf-white/50 text-lg max-w-2xl mx-auto">
            New to Starknet? Choose your track and start building.
          </p>
        </div>
        
        <div class="resources-grid grid md:grid-cols-3 gap-6">
          {resources.map((resource) => (
            <a 
              href={resource.link}
              target="_blank"
              rel="noopener noreferrer"
              class="resource-card gradient-border gs-hidden group relative block rounded-2xl p-[1px] transition-all duration-500 hover:-translate-y-1 overflow-hidden"
            >
              <div class={`relative z-10 bg-gradient-to-b ${resource.gradient} border border-snf-blue-900/40 rounded-2xl p-8 hover:border-snf-blue-500/50 transition-all duration-500`}>
                <!-- Icon -->
                <div class="icon-pop icon-glow w-14 h-14 bg-snf-blue-900/60 rounded-xl flex items-center justify-center mb-6 group-hover:bg-snf-blue-900/80 transition-colors duration-300">
                  {resource.icon === "bitcoin" && (
                    <Bitcoin class="w-7 h-7 text-orange-500 group-hover:text-orange-400 transition-colors" strokeWidth={1.5} />
                  )}
                  {resource.icon === "shield" && (
                    <Shield class="w-7 h-7 text-purple-500 group-hover:text-purple-400 transition-colors" strokeWidth={1.5} />
                  )}
                  {resource.icon === "academic" && (
                    <GraduationCap class="w-7 h-7 text-snf-blue-500 group-hover:text-snf-blue-400 transition-colors" strokeWidth={1.5} />
                  )}
                </div>
                
                <h3 class="font-display text-xl font-semibold mb-2 group-hover:text-snf-blue-500 transition-colors duration-300">{resource.title}</h3>
                <p class="text-snf-white/50 text-sm mb-6 leading-relaxed">{resource.description}</p>
                
                <span class="inline-flex items-center text-snf-blue-500 text-sm font-medium group-hover:gap-2 transition-all duration-300">
                  {resource.linkText}
                  <ArrowRight class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-300" strokeWidth={2} />
                </span>
              </div>
            </a>
          ))}
        </div>
        
      </div>
    </section>

    <!-- ============================================ -->
    <!-- SUPPORT SECTION -->
    <!-- ============================================ -->
    <section class="py-24 md:py-32 px-6 border-t border-snf-blue-900/30">
      <div class="max-w-6xl mx-auto">
        
        <h2 class="section-title gs-hidden font-display text-3xl md:text-4xl lg:text-5xl font-bold mb-16 text-center">
          Builder Support
        </h2>
        
        <div class="support-grid grid md:grid-cols-3 gap-8 md:gap-12 text-center mb-20">
          
          <div class="support-card gs-hidden">
            <div class="icon-bounce icon-glow w-20 h-20 bg-snf-blue-900/40 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <BookOpen class="w-10 h-10 text-snf-blue-500" strokeWidth={1.5} />
            </div>
            <h3 class="font-semibold text-xl mb-3">Starknet Academy</h3>
            <p class="text-snf-white/50 leading-relaxed">Free Cairo courses and documentation to get you building fast</p>
          </div>
          
          <div class="support-card gs-hidden">
            <div class="icon-bounce icon-glow w-20 h-20 bg-snf-blue-900/40 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <Monitor class="w-10 h-10 text-snf-blue-500" strokeWidth={1.5} />
            </div>
            <h3 class="font-semibold text-xl mb-3">DoraHacks AI</h3>
            <p class="text-snf-white/50 leading-relaxed">AI-powered assistance for debugging, ideation, and project review</p>
          </div>
          
