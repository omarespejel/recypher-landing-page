            <span class="text-snf-blue-500 text-xs font-medium">Register anytime until Feb 28</span>
          </div>
          <!-- Date badge -->
          <div class="inline-flex items-center gap-2 bg-snf-white/5 border border-snf-white/10 rounded-full px-3 py-1">
            <span class="text-snf-white/60 text-xs font-medium">Feb 1–28, 2026</span>
          </div>
        </div>
        
        <!-- Main Title - Clean white with subtle brand accent -->
        <h1 class="hero-element gs-hidden font-display text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-bold leading-[1.1] mb-4 md:mb-6" aria-label={`${m.hero_title_line1()} ${m.hero_title_line2()}`}>
          <span class="text-snf-white/90">{m.hero_title_line1()}</span><br/>
          <span class="bg-gradient-to-r from-snf-blue-500 to-purple-500 bg-clip-text text-transparent">{m.hero_title_line2()}</span>
