---
import * as m from '../paraglide/messages';
---

<section id="success" class="py-12 md:py-16 lg:py-24 px-4 md:px-6">
  <div class="max-w-5xl mx-auto">
    
    <!-- Section header -->
    <div class="text-center mb-8 md:mb-12">
      <p class="text-snf-blue-500 text-[10px] md:text-xs tracking-[0.2em] md:tracking-[0.25em] uppercase mb-2 font-medium">
        {m.successkicker()}
      </p>
      <h2 class="font-display text-xl md:text-2xl lg:text-3xl font-bold text-snf-white leading-tight">
        {m.successtitle()}
      </h2>
      <p class="font-subheading text-snf-white/40 text-xs md:text-sm mt-2 md:mt-3 max-w-lg mx-auto px-2">
        {m.successsubtitle()}
      </p>
    </div>

    <!-- Paths grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-2 md:gap-3 mb-6 md:mb-8">
      <div class="bg-snf-white/[0.02] rounded-lg md:rounded-xl p-3 md:p-5 text-center hover:bg-snf-white/[0.04] transition-colors duration-200">
        <div class="w-7 h-7 md:w-9 md:h-9 mx-auto mb-2 md:mb-3 rounded-lg bg-snf-blue-500/10 flex items-center justify-center">
          <svg class="w-3 h-3 md:w-4 md:h-4 text-snf-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="font-display text-xs md:text-sm font-semibold text-snf-white/90 mb-1">
          {m.successpath1title()}
        </h3>
        <p class="text-snf-white/40 text-[10px] md:text-xs leading-relaxed">
          {m.successpath1desc()}
        </p>
      </div>

      <div class="bg-snf-white/[0.02] rounded-lg md:rounded-xl p-3 md:p-5 text-center hover:bg-snf-white/[0.04] transition-colors duration-200">
        <div class="w-7 h-7 md:w-9 md:h-9 mx-auto mb-2 md:mb-3 rounded-lg bg-snf-blue-500/10 flex items-center justify-center">
          <svg class="w-3 h-3 md:w-4 md:h-4 text-snf-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <h3 class="font-display text-xs md:text-sm font-semibold text-snf-white/90 mb-1">
          {m.successpath2title()}
        </h3>
        <p class="text-snf-white/40 text-[10px] md:text-xs leading-relaxed">
          {m.successpath2desc()}
        </p>
      </div>

      <div class="bg-snf-white/[0.02] rounded-lg md:rounded-xl p-3 md:p-5 text-center hover:bg-snf-white/[0.04] transition-colors duration-200">
        <div class="w-7 h-7 md:w-9 md:h-9 mx-auto mb-2 md:mb-3 rounded-lg bg-snf-blue-500/10 flex items-center justify-center">
          <svg class="w-3 h-3 md:w-4 md:h-4 text-snf-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <h3 class="font-display text-xs md:text-sm font-semibold text-snf-white/90 mb-1">
          {m.successpath3title()}
        </h3>
        <p class="text-snf-white/40 text-[10px] md:text-xs leading-relaxed">
          {m.successpath3desc()}
        </p>
      </div>

      <div class="bg-snf-white/[0.02] rounded-lg md:rounded-xl p-3 md:p-5 text-center hover:bg-snf-white/[0.04] transition-colors duration-200">
        <div class="w-7 h-7 md:w-9 md:h-9 mx-auto mb-2 md:mb-3 rounded-lg bg-snf-blue-500/10 flex items-center justify-center">
          <svg class="w-3 h-3 md:w-4 md:h-4 text-snf-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
        </div>
        <h3 class="font-display text-xs md:text-sm font-semibold text-snf-white/90 mb-1">
          {m.successpath4title()}
        </h3>
        <p class="text-snf-white/40 text-[10px] md:text-xs leading-relaxed">
          {m.successpath4desc()}
        </p>
      </div>
    </div>

    <!-- Note -->
    <p class="text-center text-snf-white/30 text-[10px] md:text-xs max-w-xl mx-auto mb-8 md:mb-10 px-2">
      {m.successnote()}
    </p>

    <!-- Case studies -->
    <div class="grid md:grid-cols-2 gap-3 md:gap-4">
      <div class="bg-snf-white/[0.02] rounded-lg md:rounded-xl p-4 md:p-5 hover:bg-snf-white/[0.04] transition-colors duration-200">
        <div class="flex items-center gap-2 md:gap-3 mb-2 md:mb-3">
          <div class="w-7 h-7 md:w-8 md:h-8 rounded-lg bg-snf-blue-500/20 flex items-center justify-center flex-shrink-0">
            <span class="font-display text-xs md:text-sm font-bold text-snf-blue-500">M</span>
          </div>
          <div class="min-w-0">
            <h4 class="font-display text-xs md:text-sm font-semibold text-snf-white/90 truncate">{m.casestudy1name()}</h4>
            <p class="text-snf-white/40 text-[10px] md:text-xs truncate">{m.casestudy1desc()}</p>
          </div>
        </div>
        <div class="flex flex-wrap gap-1 md:gap-1.5 mb-2 md:mb-3">
          <span class="px-1.5 md:px-2 py-0.5 rounded-full bg-snf-blue-500/10 text-snf-blue-500 text-[9px] md:text-[10px]">Winner</span>
          <span class="px-1.5 md:px-2 py-0.5 rounded-full bg-snf-white/5 text-snf-white/50 text-[9px] md:text-[10px]">Seed Grant</span>
          <span class="px-1.5 md:px-2 py-0.5 rounded-full bg-snf-white/5 text-snf-white/50 text-[9px] md:text-[10px]">Accelerator</span>
        </div>
        <p class="text-snf-white/50 text-[10px] md:text-xs italic">"{m.casestudy1quote()}"</p>
      </div>

      <div class="bg-snf-white/[0.02] rounded-lg md:rounded-xl p-4 md:p-5 hover:bg-snf-white/[0.04] transition-colors duration-200">
        <div class="flex items-center gap-2 md:gap-3 mb-2 md:mb-3">
          <div class="w-7 h-7 md:w-8 md:h-8 rounded-lg bg-snf-blue-500/20 flex items-center justify-center flex-shrink-0">
            <span class="font-display text-xs md:text-sm font-bold text-snf-blue-500">C</span>
          </div>
          <div class="min-w-0">
            <h4 class="font-display text-xs md:text-sm font-semibold text-snf-white/90 truncate">{m.casestudy2name()}</h4>
            <p class="text-snf-white/40 text-[10px] md:text-xs truncate">{m.casestudy2desc()}</p>
          </div>
        </div>
        <div class="flex flex-wrap gap-1 md:gap-1.5 mb-2 md:mb-3">
          <span class="px-1.5 md:px-2 py-0.5 rounded-full bg-snf-blue-500/10 text-snf-blue-500 text-[9px] md:text-[10px]">Winner</span>
          <span class="px-1.5 md:px-2 py-0.5 rounded-full bg-snf-white/5 text-snf-white/50 text-[9px] md:text-[10px]">Growth Grant</span>
        </div>
        <p class="text-snf-white/50 text-[10px] md:text-xs italic">"{m.casestudy2quote()}"</p>
      </div>
    </div>
    
  </div>
</section>
