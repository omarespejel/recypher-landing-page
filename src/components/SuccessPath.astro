---
import * as m from '../paraglide/messages';
---

<section id="success" class="relative py-28 overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-b from-snf-black via-snf-blue-900/30 to-snf-black"></div>
  <div class="absolute inset-0 pointer-events-none success-grid"></div>
  
  <div class="relative z-10 max-w-6xl mx-auto px-6">
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-1.5 rounded-full bg-snf-blue-500/10 border border-snf-blue-500/30 text-snf-blue-500 text-sm font-medium mb-6">
        {m.successkicker()}
      </span>
      <div class="success-title-frame">
        <h2 class="font-display text-4xl md:text-6xl font-bold text-snf-white">
          {m.successtitle()}
        </h2>
      </div>
      <p class="text-snf-white/70 text-lg max-w-2xl mx-auto mt-6">
        {m.successsubtitle()}
      </p>
      <p class="text-snf-white/70 text-base max-w-3xl mx-auto mt-4">
        {m.successtimeline()}
      </p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
      <div class="glass rounded-2xl p-6 text-center hover:bg-snf-white/5 transition-colors">
        <div class="w-12 h-12 mx-auto mb-4 rounded-xl bg-snf-blue-500/20 flex items-center justify-center">
          <span class="text-sm font-semibold text-snf-blue-500">$</span>
        </div>
        <h3 class="font-display text-lg font-semibold text-snf-white mb-2">
          {m.successpath1title()}
        </h3>
        <span class="inline-block mb-2 px-2 py-0.5 rounded-full bg-snf-blue-500/10 text-snf-blue-500 text-[11px] uppercase tracking-[0.2em]">
          {m.successpath1badge()}
        </span>
        <p class="text-snf-white/60 text-sm">
          {m.successpath1desc()}
        </p>
      </div>

      <div class="glass rounded-2xl p-6 text-center hover:bg-snf-white/5 transition-colors">
        <div class="w-12 h-12 mx-auto mb-4 rounded-xl bg-snf-blue-500/20 flex items-center justify-center">
          <span class="text-sm font-semibold text-snf-blue-500">LA</span>
        </div>
        <h3 class="font-display text-lg font-semibold text-snf-white mb-2">
          {m.successpath2title()}
        </h3>
        <p class="text-snf-white/60 text-sm">
          {m.successpath2desc()}
        </p>
      </div>

      <div class="glass rounded-2xl p-6 text-center hover:bg-snf-white/5 transition-colors">
        <div class="w-12 h-12 mx-auto mb-4 rounded-xl bg-snf-blue-500/20 flex items-center justify-center">
          <span class="text-sm font-semibold text-snf-blue-500">VC</span>
        </div>
        <h3 class="font-display text-lg font-semibold text-snf-white mb-2">
          {m.successpath3title()}
        </h3>
        <p class="text-snf-white/60 text-sm">
          {m.successpath3desc()}
        </p>
      </div>

      <div class="glass rounded-2xl p-6 text-center hover:bg-snf-white/5 transition-colors">
        <div class="w-12 h-12 mx-auto mb-4 rounded-xl bg-snf-blue-500/20 flex items-center justify-center">
          <span class="text-sm font-semibold text-snf-blue-500">EYE</span>
        </div>
        <h3 class="font-display text-lg font-semibold text-snf-white mb-2">
          {m.successpath4title()}
        </h3>
        <p class="text-snf-white/60 text-sm">
          {m.successpath4desc()}
        </p>
      </div>
    </div>

    <p class="text-center text-snf-white/70 text-base max-w-2xl mx-auto mb-16">
      {m.successnote()}
    </p>

    <div class="w-full h-px bg-gradient-to-r from-transparent via-snf-white/20 to-transparent mb-16"></div>

    <div class="grid md:grid-cols-2 gap-6">
      <div class="glass rounded-2xl p-8 border border-snf-white/10 hover:border-snf-blue-500/30 transition-colors">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 rounded-lg bg-snf-blue-500/20 flex items-center justify-center">
            <span class="font-display font-bold text-snf-blue-500">M</span>
          </div>
          <div>
            <h4 class="font-display font-semibold text-snf-white">{m.casestudy1name()}</h4>
            <p class="text-snf-white/50 text-sm">{m.casestudy1desc()}</p>
          </div>
        </div>
        <div class="flex flex-wrap gap-2 mb-4">
          <span class="px-2 py-1 rounded-full bg-snf-blue-500/10 text-snf-blue-500 text-xs">Re{'{'}solve{'}'} Winner</span>
          <span class="px-2 py-1 rounded-full bg-snf-white/10 text-snf-white/70 text-xs">Applied -> Seed Grant</span>
          <span class="px-2 py-1 rounded-full bg-snf-white/10 text-snf-white/70 text-xs">Accelerator '25</span>
          <span class="px-2 py-1 rounded-full bg-snf-white/10 text-snf-white/70 text-xs">Fundraising</span>
        </div>
        <blockquote class="text-snf-white/80 italic border-l-2 border-snf-blue-500/60 pl-4">
          "{m.casestudy1quote()}"
        </blockquote>
      </div>

      <div class="glass rounded-2xl p-8 border border-snf-white/10 hover:border-snf-blue-500/30 transition-colors">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 rounded-lg bg-snf-blue-500/20 flex items-center justify-center">
            <span class="font-display font-bold text-snf-blue-500">C</span>
          </div>
          <div>
            <h4 class="font-display font-semibold text-snf-white">{m.casestudy2name()}</h4>
            <p class="text-snf-white/50 text-sm">{m.casestudy2desc()}</p>
          </div>
        </div>
        <div class="flex flex-wrap gap-2 mb-4">
          <span class="px-2 py-1 rounded-full bg-snf-blue-500/10 text-snf-blue-500 text-xs">Winter '25 Winner</span>
          <span class="px-2 py-1 rounded-full bg-snf-white/10 text-snf-white/70 text-xs">Applied -> Growth Grant</span>
          <span class="px-2 py-1 rounded-full bg-snf-white/10 text-snf-white/70 text-xs">Fundraising Support</span>
        </div>
        <blockquote class="text-snf-white/80 italic border-l-2 border-snf-blue-500/60 pl-4">
          "{m.casestudy2quote()}"
        </blockquote>
      </div>
    </div>
  </div>
</section>
