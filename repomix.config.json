{
  "output": {
    "filePath": "context-full.xml",
    "style": "xml",
    "showLineNumbers": true
  },
  "ignore": {
    "customPatterns": [
      "*.lock",
      "context-full-20*.xml",
      "context-*-*.xml",
      "node_modules/**",
      ".git/**",
      ".astro/**",
      "dist/**",
      ".DS_Store",
      ".env*",
      ".cursor/**",
      "*.swp",
      "*.swo",
      ".vercel/**",
      ".netlify/**",
      "verdant-venus/**",
      "project.inlang/cache/**",
      "src/paraglide/messages/**",
      "*.tsbuildinfo",
      "coverage/**",
      "*.lcov",
      "logs/**",
      "*.log",
      ".idea/**",
      "out/**",
      "*.tgz",
      ".eslintcache",
      ".cache/**",
      "report.*.json"
    ]
  },
  "include": [
    "README.md",
    "package.json",
    "astro.config.mjs",
    "tailwind.config.mjs",
    "tsconfig.json",
    "Makefile",
    ".gitignore",
    "src/**",
    "public/**",
    "messages/**",
    "project.inlang/settings.json",
    "project.inlang/project_id",
    "repomix.config.json"
  ]
}
