642:       let countdownIntervalId;
643:       
644:       function updateCountdown() {
645:         // Guard clause - ensure elements exist
646:         const daysEl = document.getElementById('days');
647:         if (!daysEl) return;
648:         
649:         const now = Date.now();
650:         let distance = targetDate - now;
651:         let label = 'STARTS IN';
652:         
653:         if (distance < 0) {
654:           distance = endDate - now;
655:           label = 'ENDS IN';
656:           const labelEl = document.querySelector('#countdown')?.previousElementSibling;
657:           if (labelEl) labelEl.textContent = label;
658:         }
659:         
660:         if (distance < 0) {
661:           daysEl.textContent = '00';
662:           document.getElementById('hours').textContent = '00';
663:           document.getElementById('mins').textContent = '00';
664:           document.getElementById('secs').textContent = '00';
665:           if (countdownIntervalId) clearInterval(countdownIntervalId);
666:           return;
667:         }
668:         
669:         const days = Math.floor(distance / (1000 * 60 * 60 * 24));
670:         const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
671:         const mins = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
672:         const secs = Math.floor((distance % (1000 * 60)) / 1000);
673:         
674:         daysEl.textContent = String(days).padStart(2, '0');
675:         document.getElementById('hours').textContent = String(hours).padStart(2, '0');
676:         document.getElementById('mins').textContent = String(mins).padStart(2, '0');
677:         document.getElementById('secs').textContent = String(secs).padStart(2, '0');
678:       }
